<html lang = "en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Wordverse</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" type = "text/css" href="CSS/signup.css">
        <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
        <link rel="icon" href="/images/wordverse_logo.png" type="image/x-icon">
        <%- include('partials/navbar/navbarCSS', {props: props}) %>
    </head>
    <body>
        <!--[if lt IE 7]>
            <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="#">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->
        <video autoplay muted loop>
            <source src="/images/signup.mp4" type="video/mp4">
        </video>
        <%- include('partials/navbar/navbar', {props: props}) %>
        <div class="supercontainer">
            <div class="container">
                <div class="wrapper">
                    <form action="/signup" method="POST">
                        <h1>Sign Up</h1>
                        <div class="input-box">
                            <input name="username" type="text" placeholder="Username" required autofocus>
                            <i class='bx bxs-user'></i>
                        </div>
                        <div class="input-box">
                            <input name="password" type="password" placeholder="Password" required>
                            <i class='bx bxs-lock-alt' ></i>
                        </div>
                        <div class="input-box">
                            <input name="email" type="text" placeholder="alan.weide@example.com" required>
                            <i class='bx bx-envelope' ></i>
                        </div>
                        <div class="input-box">
                            <input name="school" type="text" placeholder="School" required>
                            <i class='bx bxs-school'></i>
                        </div>
                        <button type="submit" class="btn">Sign Up!</button>
                    </form>
                </div>
            </div>
        </div>
        <%- include('partials/imports/jquery', {options: ["ui"]}) %>
        <%- include('partials/navbar/navbarJS') %>
        <script src="/JS/index.js"></script>
    </body>
</html>